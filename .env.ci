# Development & CI Testing Environment Configuration
# This file is used for BOTH local development AND CI testing
# For production, use infrastructure/.env.production

DEBUG=True
SECRET_KEY=test-secret-key-for-local-and-ci-do-not-use-in-production
ENCRYPTION_KEY=test-32-byte-encryption-key-dev-ci

# Database Configuration
# - For docker-compose: DB_HOST will be overridden to 'db' (service name)
# - For native Python tests: DB_HOST=localhost
DB_ENGINE=django.db.backends.postgresql
DB_NAME=test_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
# - For docker-compose: REDIS_URL will use 'redis' service name
# - For native Python tests: redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Application Settings
ALLOWED_HOSTS=*
CORS_ALLOWED_ORIGINS=http://localhost:8000

# Port Configuration
BACKEND_PORT=8000
REDIS_PORT=6379
