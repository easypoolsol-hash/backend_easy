{% extends 'school_dashboard/base.html' %}

{% block title %}Dashboard - EasyPool School{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex items-center justify-between">
        <div>
            <h2 class="text-2xl font-bold text-gray-900">Dashboard Overview</h2>
            <p class="text-sm text-gray-500 mt-1">Real-time bus tracking and boarding statistics</p>
        </div>
        <div class="flex items-center space-x-2 text-sm text-gray-600">
            <span class="material-icons text-sm">schedule</span>
            <span id="current-time"></span>
        </div>
    </div>

    <!-- Statistics Cards (Auto-refresh every 30 seconds) -->
    <div hx-get="{% url 'school_dashboard:bus_stats' %}"
         hx-trigger="load, every 30s"
         hx-swap="innerHTML">
        <!-- Loading state -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-white rounded-lg shadow-sm p-6 stat-card">
                <div class="animate-pulse">
                    <div class="h-4 bg-gray-200 rounded w-1/2 mb-4"></div>
                    <div class="h-8 bg-gray-200 rounded w-1/3"></div>
                </div>
            </div>
            <div class="bg-white rounded-lg shadow-sm p-6 stat-card">
                <div class="animate-pulse">
                    <div class="h-4 bg-gray-200 rounded w-1/2 mb-4"></div>
                    <div class="h-8 bg-gray-200 rounded w-1/3"></div>
                </div>
            </div>
            <div class="bg-white rounded-lg shadow-sm p-6 stat-card">
                <div class="animate-pulse">
                    <div class="h-4 bg-gray-200 rounded w-1/2 mb-4"></div>
                    <div class="h-8 bg-gray-200 rounded w-1/3"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Manual Stats (fallback if HTMX fails) -->
    <noscript>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Buses Card -->
            <div class="bg-white rounded-lg shadow-sm p-6 stat-card">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-500 font-medium">Active Buses</p>
                        <p class="text-3xl font-bold text-gray-900 mt-2">{{ buses_active }}/{{ total_buses }}</p>
                        <p class="text-xs text-gray-400 mt-1">Total fleet</p>
                    </div>
                    <div class="bg-primary bg-opacity-10 rounded-full p-3">
                        <span class="material-icons text-primary text-3xl">directions_bus</span>
                    </div>
                </div>
            </div>

            <!-- Students Card -->
            <div class="bg-white rounded-lg shadow-sm p-6 stat-card">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-500 font-medium">Students Boarded</p>
                        <p class="text-3xl font-bold text-gray-900 mt-2">{{ students_boarded_today }}</p>
                        <p class="text-xs text-gray-400 mt-1">Today</p>
                    </div>
                    <div class="bg-green-100 rounded-full p-3">
                        <span class="material-icons text-green-600 text-3xl">people</span>
                    </div>
                </div>
            </div>

            <!-- On-Time Card -->
            <div class="bg-white rounded-lg shadow-sm p-6 stat-card">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-500 font-medium">On-Time Performance</p>
                        <p class="text-3xl font-bold text-green-600 mt-2">{{ on_time_percentage }}%</p>
                        <p class="text-xs text-gray-400 mt-1">Within 7-9 AM</p>
                    </div>
                    <div class="bg-blue-100 rounded-full p-3">
                        <span class="material-icons text-blue-600 text-3xl">schedule</span>
                    </div>
                </div>
            </div>
        </div>
    </noscript>

    <!-- Recent Activity (Auto-refresh every 10 seconds) -->
    <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-bold text-gray-900 flex items-center space-x-2">
                <span class="material-icons text-primary">update</span>
                <span>Recent Boarding Events</span>
            </h3>
            <div class="flex items-center space-x-2 text-xs text-gray-500">
                <span class="w-2 h-2 bg-green-500 rounded-full live-indicator"></span>
                <span>Live updates every 10s</span>
            </div>
        </div>

        <!-- HTMX auto-refresh container -->
        <div hx-get="{% url 'school_dashboard:recent_events' %}"
             hx-trigger="load, every 10s"
             hx-swap="innerHTML"
             class="space-y-3">
            <!-- Loading skeleton -->
            <div class="animate-pulse space-y-3">
                {% for i in "12345" %}
                <div class="flex items-center space-x-4 p-3 bg-gray-50 rounded-lg">
                    <div class="w-10 h-10 bg-gray-200 rounded-full"></div>
                    <div class="flex-1 space-y-2">
                        <div class="h-4 bg-gray-200 rounded w-3/4"></div>
                        <div class="h-3 bg-gray-200 rounded w-1/2"></div>
                    </div>
                    <div class="h-4 bg-gray-200 rounded w-16"></div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- Coming Soon Sections -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Live Map (Coming Soon) -->
        <div class="bg-white rounded-lg shadow-sm p-6 border-2 border-dashed border-gray-300">
            <div class="flex items-center justify-center h-64 text-gray-400">
                <div class="text-center">
                    <span class="material-icons text-6xl mb-4">map</span>
                    <p class="text-lg font-medium">Live Bus Tracking Map</p>
                    <p class="text-sm mt-2">Coming in Phase 2</p>
                </div>
            </div>
        </div>

        <!-- Alerts (Coming Soon) -->
        <div class="bg-white rounded-lg shadow-sm p-6 border-2 border-dashed border-gray-300">
            <div class="flex items-center justify-center h-64 text-gray-400">
                <div class="text-center">
                    <span class="material-icons text-6xl mb-4">notifications</span>
                    <p class="text-lg font-medium">Alerts & Notifications</p>
                    <p class="text-sm mt-2">Coming in Phase 2</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Update time script -->
<script>
    function updateTime() {
        const now = new Date();
        const timeString = now.toLocaleTimeString('en-IN', {
            hour: '2-digit',
            minute: '2-digit',
            second: '2-digit',
            hour12: true
        });
        document.getElementById('current-time').textContent = timeString;
    }

    updateTime();
    setInterval(updateTime, 1000);
</script>
{% endblock %}
