# Bus Kiosk Backend - Development Environment Variables
# Copy this file to .env for local development

# Django Core Settings
DEBUG=True
SECRET_KEY=django-insecure-dev-key-only-for-development-not-for-production
ENCRYPTION_KEY=dev-32-byte-encryption-key-for-development-only

# Database Configuration (SQLite for development)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3
# PostgreSQL settings (uncomment if using PostgreSQL locally)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=bus_kiosk_dev
# DB_USER=bus_kiosk_user
# DB_PASSWORD=password
# DB_HOST=localhost
# DB_PORT=5432

# Redis Configuration (optional for development)
REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=

# Celery Configuration (optional for development)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security & CORS (relaxed for development)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080

# Email Configuration (console backend for development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_HOST=localhost
# EMAIL_PORT=1025
# EMAIL_HOST_USER=
# EMAIL_HOST_PASSWORD=

# Development Tools
USE_DEBUG_TOOLBAR=True
DJANGO_SETTINGS_MODULE=bus_kiosk_backend.settings

# Logging (more verbose in development)
LOG_LEVEL=DEBUG
